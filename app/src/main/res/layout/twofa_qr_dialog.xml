<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_title"
        android:paddingBottom="15dp"
        android:text="Recovery Code"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep your recovery code in a safe place. Use it to regain access to your account if you lose your phone."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/img_qr"
        android:layout_marginTop="20dp"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:adjustViewBounds="true"
        android:padding = "1dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:id="@+id/copy_data"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="visible" >
        <TextView
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:id="@+id/underline_text"
            android:text=""
            android:textSize="12sp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/img_copy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/copy"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btn_next"
            android:text="Next"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_border"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_border"
            />
    </LinearLayout>


</LinearLayout>