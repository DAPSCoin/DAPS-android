<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:padding="16dp" >

        <ToggleButton
            android:id="@+id/twofa_state"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""/>

        <TextView
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Remember my authenticator code for"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnDay"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_button_border"
            android:gravity="center"
            android:text="1 Day"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnWeek"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_button_border"
            android:gravity="center"
            android:text="1 Week"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMonth"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_button_border"
            android:gravity="center"
            android:text="1 Month"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Current authenticator code"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <TextView
                android:id = "@+id/code_1"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/code_2"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/code_3"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/code_4"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/code_5"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

            <TextView
                android:id = "@+id/code_6"
                android:layout_width="match_parent"
                android:layout_height = "30dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:background="@drawable/bottom_border"
                android:textAlignment="center"
                android:text = ""
                android:textColor = "@color/white"
                android:textSize = "16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>