<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="15dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:drawable="@drawable/expand">
            </item>
        </layer-list>
    </item>
    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="15dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:drawable="@drawable/collapse">
            </item>
        </layer-list>
    </item>
</selector>